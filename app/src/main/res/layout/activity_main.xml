<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:textAllCaps="false">

            <Button
                android:id="@+id/constBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Const button"
                android:textAllCaps="false"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/relativeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Relat and linear button"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constBtn" />

            <Button
                android:id="@+id/openAnimBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Activity Anim"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/relativeBtn" />

            <Button
                android:id="@+id/constSetBtn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Const Set"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/openAnimBtn" />

            <Button
                android:id="@+id/constSetBtn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="PlaceHolder"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn4" />

            <Button
                android:id="@+id/constSetBtn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ClassicAnim"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn5" />

            <Button
                android:id="@+id/constSetBtn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="AnimFromResources"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn6" />

            <Button
                android:id="@+id/constSetBtn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CombineAnim"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn7" />

            <Button
                android:id="@+id/constSetBtn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="BackgroundAnim"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn8" />

            <Button
                android:id="@+id/constSetBtn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SimpleObjectAnimator"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn9" />

            <Button
                android:id="@+id/constSetBtn11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SeveralObjectAnimator"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn10" />

            <Button
                android:id="@+id/constSetBtn12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SimpleViewProperty"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn11" />

            <Button
                android:id="@+id/constSetBtn13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FromAnimatorResources"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn12" />

            <Button
                android:id="@+id/constSetBtn14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Simple Transition"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn13" />

            <Button
                android:id="@+id/constSetBtn15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Transition Res"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn14" />

            <Button
                android:id="@+id/constSetBtn16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Explode Slide Transition"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn14" />

            <Button
                android:id="@+id/constSetBtn17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Coordinated Slide Transition"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn14" />

            <Button
                android:id="@+id/constSetBtn18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Share Element Between Activities"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn14" />

            <Button
                android:id="@+id/constSetBtn19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Window content transition"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/constSetBtn14" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>